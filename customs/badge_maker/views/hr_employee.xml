<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Employee Form View - Add Badge Images -->
    <record id="view_employee_form_badge_images" model="ir.ui.view">
        <field name="name">hr.employee.form.badge.images</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='work_email']" position="before">
               
                        <field name="name_of_baptism"  />
                <field name="branch" />
                <field name="issued_date" />
                <field name="expiration_date" />
                     
              
            </xpath>

             <xpath expr="//header" position="inside">
            <button
                name="action_generate_id_badge_pdf"
                type="object"
                string="Generate ID Badge (PDF)"
                class="oe_highlight"
              
            />
        </xpath>
        </field>
    </record>

</odoo>
